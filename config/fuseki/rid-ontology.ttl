@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rid: <http://rid.irrigation.th/ontology#> .

# Ontology Definition
rid: rdf:type owl:Ontology ;
    rdfs:label "RID Irrigation Ontology"@en ;
    rdfs:comment "Ontology for the Royal Irrigation Department's water incident tracking system"@en .

# Classes
rid:WaterIncident rdf:type owl:Class ;
    rdfs:label "Water Incident"@en ;
    rdfs:comment "A water-related incident such as flood or drought"@en .

rid:Flood rdf:type owl:Class ;
    rdfs:subClassOf rid:WaterIncident ;
    rdfs:label "Flood"@en ;
    rdfs:comment "A flood incident"@en .

rid:Drought rdf:type owl:Class ;
    rdfs:subClassOf rid:WaterIncident ;
    rdfs:label "Drought"@en ;
    rdfs:comment "A drought incident"@en .

rid:Location rdf:type owl:Class ;
    rdfs:label "Location"@en ;
    rdfs:comment "Geographic location of an incident"@en .

rid:Response rdf:type owl:Class ;
    rdfs:label "Response"@en ;
    rdfs:comment "Response action taken for an incident"@en .

rid:SocialPost rdf:type owl:Class ;
    rdfs:label "Social Media Post"@en ;
    rdfs:comment "A social media post related to a water incident"@en .

rid:User rdf:type owl:Class ;
    rdfs:label "Social Media User"@en ;
    rdfs:comment "A user who posted about a water incident"@en .

rid:Sentiment rdf:type owl:Class ;
    rdfs:label "Sentiment"@en ;
    rdfs:comment "Sentiment analysis of a social media post"@en .

# Object Properties
rid:hasLocation rdf:type owl:ObjectProperty ;
    rdfs:domain rid:WaterIncident ;
    rdfs:range rid:Location ;
    rdfs:label "has location"@en .

rid:hasResponse rdf:type owl:ObjectProperty ;
    rdfs:domain rid:WaterIncident ;
    rdfs:range rid:Response ;
    rdfs:label "has response"@en .

rid:mentionsIncident rdf:type owl:ObjectProperty ;
    rdfs:domain rid:SocialPost ;
    rdfs:range rid:WaterIncident ;
    rdfs:label "mentions incident"@en .

rid:postedBy rdf:type owl:ObjectProperty ;
    rdfs:domain rid:SocialPost ;
    rdfs:range rid:User ;
    rdfs:label "posted by"@en .

rid:hasSentiment rdf:type owl:ObjectProperty ;
    rdfs:domain rid:SocialPost ;
    rdfs:range rid:Sentiment ;
    rdfs:label "has sentiment"@en .

# Datatype Properties
rid:severity rdf:type owl:DatatypeProperty ;
    rdfs:domain rid:WaterIncident ;
    rdfs:range xsd:integer ;
    rdfs:label "severity"@en .

rid:timestamp rdf:type owl:DatatypeProperty ;
    rdfs:domain rid:WaterIncident ;
    rdfs:range xsd:dateTime ;
    rdfs:label "timestamp"@en .

rid:postContent rdf:type owl:DatatypeProperty ;
    rdfs:domain rid:SocialPost ;
    rdfs:range xsd:string ;
    rdfs:label "post content"@en .

rid:postTimestamp rdf:type owl:DatatypeProperty ;
    rdfs:domain rid:SocialPost ;
    rdfs:range xsd:dateTime ;
    rdfs:label "post timestamp"@en .

rid:platform rdf:type owl:DatatypeProperty ;
    rdfs:domain rid:SocialPost ;
    rdfs:range xsd:string ;
    rdfs:label "social media platform"@en .

rid:userName rdf:type owl:DatatypeProperty ;
    rdfs:domain rid:User ;
    rdfs:range xsd:string ;
    rdfs:label "user name"@en .

rid:userLocation rdf:type owl:DatatypeProperty ;
    rdfs:domain rid:User ;
    rdfs:range xsd:string ;
    rdfs:label "user location"@en .

rid:sentimentScore rdf:type owl:DatatypeProperty ;
    rdfs:domain rid:Sentiment ;
    rdfs:range xsd:float ;
    rdfs:label "sentiment score"@en .

rid:latitude rdf:type owl:DatatypeProperty ;
    rdfs:domain rid:Location ;
    rdfs:range xsd:decimal ;
    rdfs:label "latitude"@en .

rid:longitude rdf:type owl:DatatypeProperty ;
    rdfs:domain rid:Location ;
    rdfs:range xsd:decimal ;
    rdfs:label "longitude"@en .

rid:locationName rdf:type owl:DatatypeProperty ;
    rdfs:domain rid:Location ;
    rdfs:range xsd:string ;
    rdfs:label "location name"@en . 